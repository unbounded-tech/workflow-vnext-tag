{
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchManagers": [
        "github-actions",
        "github-releases"
      ],
      "semanticCommitType": "fix"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.yaml$/"
      ],
      "matchStrings": [
        "\\s*ubi --project (?<depName>.*) --tag (?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "github-releases",
      "registryUrlTemplate": "https://github.com"
    }
  ]
}
